<body>
<div id="edit-link">
    <form action="/links/<%=link_id%>/edit" method="POST" id="form-container">
        <h4>Edit this link</h4>
        <input value="<%=link_title%>" type="text" name="link_title" required />
        <textarea type="text" name="link_desc"><%=link_desc%></textarea>
          <span>Topic</span>
          <div class="dropdown_options">
              <select name="link_topic">
                  <option>math</option>
                  <option>programming</option>
                  <option>javascript</option>
                  <option>gaming</option>
                  <option>english</option>
                  <option>science</option>
                  <option>fitness</option>
                  <option>wizardry</option>
                  <option>dating</option>
                  <option>nature</option>
                  <option>business</option>
                  <option>python</option>
                  <option>cooking</option>
              </select>
          </div>
        <button class="button mark">Save</button>
        <a href="javascript:history.back()"><button class="button secondary goback">Back</button></a>
      </form>
      <form action="/links/<%=link_id%>/delete" method=POST><button><i class="fas fa-trash"></i></button></form>


    </div>




